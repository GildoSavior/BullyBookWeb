@model IEnumerable<BullyBookWeb.Models.Product>
    
<div class="row pb-3">
    @foreach(var product in Model){
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border: 1px solid #008cba; border-radius: 5px;">
                    <div class="card border-0">
                        <img src="@product.ImageUrl" style="height: 350px" class="card-image-top rounded"/>
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h4 text-primary">@product.Title</p>
                                <p class="card-title h5 text-info ">@product.Author</p>
                            </div>
                            <div class="pl-1">
                                <p>List Price:<strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                                <p>As low as:<b>$@product.Price.ToString("0.00")</b></p>
                            </div>
                    
                        </div>
                    </div>
                    <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">
                        Product Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>